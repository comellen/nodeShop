extends ../includes/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            -let prodTitle = product.title;
                            img(src="/assets/mysterybox.png", alt=prodTitle + " image")
                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                        .card__actions
                            -let id = product.id;
                            a(href="/admin/edit-product/" + id).btn Edit
                            form(action="/admin/delete-product/" + id method="POST")
                                button(type="submit").btn Delete
        else
            h1 No Products