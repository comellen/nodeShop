extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="/assets/mysterybox.png", alt="product")
                        .card__content
                            h2.product__price $29.99
                            p.product__description A must-have for anyone spending money at an online shop.
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products