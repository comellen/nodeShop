<main>
    {{#if hasProducts }}
    <div class="grid">
        {{#each products }}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{ this.title }}</h1>
            </header>
            <div class="card__image">
                <img src="/assets/mysterybox.png" , alt="product">
            </div>
            <div class="card__content">
                <h2 class="product__price">$29.99</h2>
                <p class="product__description">A must-have for anyone spending money at an online shop.</p>
            </div>
            <div class="card__actions">
                <button class="btn">Add to Cart</button>
            </div>
        </article>
        {{/each }}
    </div>
    {{ else }}
    <h1>No products found.</h1>
    {{/if }}
</main>